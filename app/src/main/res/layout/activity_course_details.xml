<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Course_DetailsActivity">
    <ImageView
        android:id="@+id/course_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:src="@drawable/android_img"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        />
    <TextView
        android:id="@+id/course_details"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:text="course details text"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:maxLines="200"
        android:ellipsize="none"
        app:layout_constraintTop_toBottomOf="@+id/course_image"
        app:layout_constraintStart_toStartOf="@+id/course_image"

        app:layout_constraintEnd_toEndOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>